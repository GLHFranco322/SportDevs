<%- include('../partials/head') %>

    <%- include('../partials/header') %>

        <main>

            <tr>
                <div class="container my-3">
                    <div class="row">
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-center">
                                <h2 class="products-title">Administrar Usuarios</h2>
                            </div>
                            <hr>
                        </div>
                    </div>

                    <div class="col-12">

                        <div class="card shadow-lg">
                            <div class="card-header bg-warning">
                                <div class="d-flex flex-column flex-md-row justify-content-between  gap-2">
                                    <div class="d-flex flex-column flex-md-row gap-2">
                                        <form class="d-flex align-items-center" role="search">
                                            <input class="form-control me-2" name="search" type="search"
                                                placeholder="Buscar..." aria-label="Search">
                                            <button class="btn btn-outline-dark" type="submit"><i
                                                    class="fa fa-search"></i></button>
                                        </form>
                                        <form class="d-flex" role="search">
                                            <select class="form-select me-2" name="category">
                                                <option value="" selected>Todos los usuarios</option>
                                            </select>
                                            <button class="btn btn-outline-dark" type="submit"><i
                                                    class="fa fa-filter"></i></button>
                                        </form>
                                    </div>

                                </div>


                            </div>
                            <div class="card-body table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Nombre</th>
                                            <th scope="col">Apellido</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Validado</th>
                                            <th scope="col">Bloquear</th>
                                            <th scope="col">Rol</th>
                                            <th scope="col">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% users.forEach(({id, name, surname, email, validate, rol, lock})=> { %>
                                            <tr>
                                                <th scope="row">
                                                    <%= id %>
                                                </th>
                                                <td>
                                                    <%= name %>
                                                </td>
                                                <td>
                                                    <%= surname %>
                                                </td>
                                                <td>
                                                    <%= email %>
                                                </td>
                                                <td class="text-center">
                                                    <input type="checkbox" class="btn-check"
                                                        id="btn-check-validate<%= id %>" autocomplete="off" <%=validate
                                                        && 'checked' %>>
                                                    <label class="btn btn-sm btn-outline-primary"
                                                        for="btn-check-validate<%= id %>"><i
                                                            class="fas fa-user-check"></i></label>
                                                </td>
                                                <td class="text-center">
                                                    <input type="checkbox" class="btn-check"
                                                        id="btn-check-lock<%= id %>" autocomplete="off" <%=lock
                                                        && 'checked' %>>
                                                    <label class="btn btn-sm btn-outline-danger"
                                                        for="btn-check-lock<%= id %>"><i
                                                            class="fas fa-lock"></i></label>
                                                </td>
                                                <td class="text-center">
                                                    <input type="checkbox" class="btn-check" id="btn-check-rol<%= id %>"
                                                        autocomplete="off" <%=rol=='admin' && 'checked' %>>
                                                    <label class="btn btn-sm btn-outline-warning"
                                                        for="btn-check-rol<%= id %>"><i
                                                            class="fas fa-user-shield"></i></label>
                                                </td>
                                                <td class="text-center">
                                                    <a class="btn btn-sm btn-success"><i class="fas fa-key"></i></a>
                                                </td>
                                                <td>

                                                </td>
                                            </tr>
                                            <% }) %>


                                    </tbody>

                                </table>
                                <!-- <tfoot> -->
                                <!--  include('../partials/pager', { path : '/admin/users' , currentPage, totalPages }) %> -->
                                <!-- </tfoot> -->
                            </div>
                        </div>

                    </div>

                </div>
            </tr>

        </main>

        <%- include('../partials/footer') %>