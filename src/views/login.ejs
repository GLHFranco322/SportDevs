<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/stylesheets/login.css">
    <script src="https://kit.fontawesome.com/91e0160591.js" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title><link rel="icon" href="/images/icons/SD.ico" type="image/x-icon">
</head>

<body>
    <%- include('./partials/header') %>
        <main>
            <article class="login" style="max-width: 100dvw;">
                <div id="h2">
                    <h2>Iniciar Sesión</h2>
                </div>
                <form action="/auth/processLogin" method="post"> <label for="email">Ingrese su E-mail</label>
                    <input type="email" id="email" name="email" required placeholder="">
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="password" required minlength="6" placeholder="">

                    <% if (locals.error) { %>
                        <div class="alert">
                            <%= error %>
                        </div>
                        <% } %>

                            <button type="submit">Continuar</button>
                            <p>¿No tienes cuenta? <a href="/users/register">Registrarse</a></p>
                </form>
            </article>
        </main>

        <%- include('./partials/footer') %>